{parseOrderItems(selectedEditedItemId?.items || "").map((item, index) => (
    <li key={index} className="flex justify-between">
      <div className="flex items-center">{item.name}</div>
      <div className="flex space-x-2">
        <Button
          variant="outline"
          size="sm"
          onClick={() => handleDecreaseQuantity(index)} // Need to handle index-based updates
        >
          -
        </Button>
        <div className="flex items-center">x{item.quantity}</div>
        <Button
          variant="outline"
          size="sm"
          onClick={() => handleIncreaseQuantity(index)} // Need to handle index-based updates
        >
          +
        </Button>
      </div>
      <div className="flex items-center">
        {/* You need item price to calculate amount */}
        GHC {(item.quantity * 10).toFixed(2)} {/* Placeholder price */}
      </div>
    </li>
  ))}